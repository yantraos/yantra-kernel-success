id='mpc'
version='1.1.0'
release='1'
about='Minimalist command line interface to MPD'
license='GPL3'
runtime=('glibc')
source=("$YSRC_URL/$id-$version.tar.gz")

build() {
    cd $id-$version

    ./configure --prefix=/usr    \
            --disable-static     \
            --docdir=/usr/share/doc/$id-$version
    make
    make html

    make check

    make DESTDIR=$pkgdir install
    make DESTDIR=$pkgdir install-html
}
